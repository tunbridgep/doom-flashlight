class ResetConfig : ConfigBase
{
    static void ResetLimitedDefaults()
    {
        //reset most things to default
        CVar.GetCvar("flashlight_stealth_monster_mode").ResetToDefault();
        CVar.GetCvar("flashlight_darken_mode").ResetToDefault();
        CVar.GetCvar("flashlight_stealth_monster_chance").ResetToDefault();
        CVar.GetCvar("flashlight_battery_mode").ResetToDefault();
        CVar.GetCvar("flashlight_battery_max").ResetToDefault();
        CVar.GetCvar("flashlight_battery_min_threshold").ResetToDefault();
        CVar.GetCvar("flashlight_battery_use_per_tic").ResetToDefault();
        CVar.GetCvar("flashlight_battery_charge_per_tic").ResetToDefault();
        CVar.GetCvar("flashlight_spawn_battery_upgrade_chance").ResetToDefault();
        CVar.GetCvar("flashlight_spawn_battery_recharge_chance").ResetToDefault();
          
        CVar.GetCvar("flashlight_spawn_flare_box").ResetToDefault();
        CVar.GetCvar("flashlight_spawn_flashlight").ResetToDefault();
        CVar.GetCvar("flashlight_spawn_headlamp").ResetToDefault();
        CVar.GetCvar("flashlight_spawn_flare").ResetToDefault();
        CVar.GetCvar("flashlight_spawn_battery_upgrade").ResetToDefault();
        CVar.GetCvar("flashlight_spawn_battery_recharge").ResetToDefault();

        CVar.GetCvar("flashlight_starting_flares").ResetToDefault();
        CVar.GetCvar("flashlight_starting_item").ResetToDefault();
        
        CVar.GetCvar("flashlight_enemies_drop_flashlights").ResetToDefault();
        CVar.GetCvar("flashlight_enemies_drop_flares").ResetToDefault();
        CVar.GetCvar("flashlight_enemies_drop_flashlights_chance").ResetToDefault();
        CVar.GetCvar("flashlight_enemies_drop_flares_chance").ResetToDefault();
        
        CVar.GetCvar("flashlight_enemies_drop_battery").ResetToDefault();
        CVar.GetCvar("flashlight_enemies_drop_battery_expander").ResetToDefault();
        CVar.GetCvar("flashlight_enemies_drop_battery_chance").ResetToDefault();
        CVar.GetCvar("flashlight_enemies_drop_battery_expander_chance").ResetToDefault();
        
        CVar.GetCvar("flashlight_flare_recharge_enabled").ResetToDefault();
		
		CVar.GetCvar("flashlight_stealth_player_enabled").ResetToDefault();
		
		//map alteration
        CVar.GetCvar("flashlight_darken_mode").ResetToDefault();
        CVar.GetCvar("flashlight_darken_parabola_brightness_factor").ResetToDefault();
        CVar.GetCvar("flashlight_darken_parabola_curve_point").ResetToDefault();
        CVar.GetCvar("flashlight_darken_parabola_adjust").ResetToDefault();
        CVar.GetCvar("flashlight_darken_linear_amount").ResetToDefault();
        CVar.GetCvar("flashlight_darken_proportional_amount").ResetToDefault();
        CVar.GetCvar("flashlight_darken_divide_amount").ResetToDefault();
        CVar.GetCvar("flashlight_darken_divide_additional").ResetToDefault();
        CVar.GetCvar("flashlight_replace_sky").ResetToDefault();
		CVar.GetCvar("flashlight_darken_max_brightness").ResetToDefault();
    }

    //For some reason, this crashes the game
    static void ResetAllDefaults()
    {       
        CVar.GetCvar("flashlight_color").ResetToDefault();
        CVar.GetCvar("flashlight_intensity").ResetToDefault();
        CVar.GetCvar("flashlight_inner_angle").ResetToDefault();
        CVar.GetCvar("flashlight_outer_angle").ResetToDefault();
        CVar.GetCvar("flashlight_auto_use_flashlight").ResetToDefault();
        CVar.GetCvar("flashlight_performance_mode").ResetToDefault();
        
        //flare settings        
        CVar.GetCvar("flashlight_flare_burn_forever").ResetToDefault();
        CVar.GetCvar("flashlight_flare_burn_time").ResetToDefault();
        CVar.GetCvar("flashlight_flare_color").ResetToDefault();
        CVar.GetCvar("flashlight_auto_use_flare").ResetToDefault();
        CVar.GetCvar("flashlight_flare_show_count").ResetToDefault();
        CVar.GetCvar("flashlight_flare_show_inventory").ResetToDefault();
        CVar.GetCvar("flashlight_flare_reveal_stealth").ResetToDefault();
        CVar.GetCvar("flashlight_flare_recharge_enabled").ResetToDefault();
        CVar.GetCvar("flashlight_flare_recharge_frequency_seconds").ResetToDefault();
        CVar.GetCvar("flashlight_flare_recharge_max_amount").ResetToDefault();
        CVar.GetCvar("flashlight_flare_max_amount").ResetToDefault();

        //battery settings
        CVar.GetCvar("flashlight_battery_display").ResetToDefault();
        CVar.GetCvar("flashlight_battery_mode").ResetToDefault();
        CVar.GetCvar("flashlight_battery_max").ResetToDefault();
        CVar.GetCvar("flashlight_battery_min_threshold").ResetToDefault();
        CVar.GetCvar("flashlight_battery_use_per_tic").ResetToDefault();
        CVar.GetCvar("flashlight_battery_charge_per_tic").ResetToDefault();
        
        //map alteration
        CVar.GetCvar("flashlight_darken_mode").ResetToDefault();
        CVar.GetCvar("flashlight_darken_parabola_brightness_factor").ResetToDefault();
        CVar.GetCvar("flashlight_darken_parabola_curve_point").ResetToDefault();
        CVar.GetCvar("flashlight_darken_parabola_adjust").ResetToDefault();
        CVar.GetCvar("flashlight_darken_linear_amount").ResetToDefault();
        CVar.GetCvar("flashlight_darken_proportional_amount").ResetToDefault();
        CVar.GetCvar("flashlight_darken_divide_amount").ResetToDefault();
        CVar.GetCvar("flashlight_darken_divide_additional").ResetToDefault();
        CVar.GetCvar("flashlight_replace_sky").ResetToDefault();
		CVar.GetCvar("flashlight_darken_max_brightness").ResetToDefault();

        //stealth monsters
        CVar.GetCvar("flashlight_stealth_monster_chance").ResetToDefault();
        CVar.GetCvar("flashlight_stealth_monster_threshold").ResetToDefault();
        CVar.GetCvar("flashlight_stealth_monster_mode").ResetToDefault();

        //replacers        
        CVar.GetCvar("flashlight_spawn_flashlight").ResetToDefault();
        CVar.GetCvar("flashlight_spawn_flashlight_chance").ResetToDefault();
        CVar.GetCvar("flashlight_spawn_headlamp").ResetToDefault();
        CVar.GetCvar("flashlight_spawn_headlamp_chance").ResetToDefault();
        CVar.GetCvar("flashlight_spawn_flare").ResetToDefault();
        CVar.GetCvar("flashlight_spawn_flare_chance").ResetToDefault();
        CVar.GetCvar("flashlight_spawn_battery_upgrade").ResetToDefault();
        CVar.GetCvar("flashlight_spawn_battery_upgrade_chance").ResetToDefault();
        CVar.GetCvar("flashlight_spawn_battery_recharge").ResetToDefault();
        CVar.GetCvar("flashlight_spawn_battery_recharge_chance").ResetToDefault();
        CVar.GetCvar("flashlight_spawn_flare_box").ResetToDefault();
        CVar.GetCvar("flashlight_spawn_flare_box_chance").ResetToDefault();
        CVar.GetCvar("flashlight_enemies_drop_flashlights").ResetToDefault();
        CVar.GetCvar("flashlight_enemies_drop_flares").ResetToDefault();
        CVar.GetCvar("flashlight_enemies_drop_battery").ResetToDefault();
        CVar.GetCvar("flashlight_enemies_drop_battery_expander").ResetToDefault();
        CVar.GetCvar("flashlight_enemies_drop_flashlights_chance").ResetToDefault();
        CVar.GetCvar("flashlight_enemies_drop_flares_chance").ResetToDefault();
        CVar.GetCvar("flashlight_enemies_drop_battery_chance").ResetToDefault();
        CVar.GetCvar("flashlight_enemies_drop_battery_expander_chance").ResetToDefault();

        //start-game settings
        CVar.GetCvar("flashlight_starting_item").ResetToDefault();
        CVar.GetCvar("flashlight_starting_flares").ResetToDefault();
        
        //compatibility settings
        CVar.GetCvar("flashlight_compat_brutal_gldefs_liquids").ResetToDefault();
        CVar.GetCvar("flashlight_compat_brutal_gldefs_lights").ResetToDefault();
        CVar.GetCvar("flashlight_compat_brutal_gldefs_gates").ResetToDefault();
        CVar.GetCvar("flashlight_compat_brutal_gldefs_doors").ResetToDefault();
        
        //misc
        CVar.GetCvar("flashlight_debug").ResetToDefault();
    }
}
